<?xml version="1.0" encoding="UTF-8"?>
<project name="Speedith Documentation" default="default" basedir=".">
    <description>Builds the Speedith documentation.</description>
    
    <target name="init">
        <property file="build.properties"/>
    </target>
    
    <target name="default" depends="init,build-readme">
    </target>
    
<!-- ===========================================================================
        README
============================================================================ -->
    
    <target name="-check-readme-uptodate">
        <uptodate srcfile="${readme.src}" targetfile="${readme.target}" property="readme-uptodate"/>
    </target>
    
    <target name="build-readme" depends="-check-readme-uptodate" unless="readme-uptodate">
        <echo message="Building the README.html file." level="info"/>
        <echo message="&lt;!-- Do not edit this file. This file is autogenerated from '${basedir}/${readme.src}'. --&gt;" file="${readme.target}"/>
        <exec executable="markdown" output="${readme.target}" append="true">
            <arg file="${readme.src}" />
        </exec>
    </target>
</project>
